using LinearAlgebra
using BenchmarkTools

# Generate random data
function random_matrix(m, n)
    return rand(-5.0:0.1:5.0, m, n)
end


# BLAS LEVEL-3: Matrix-Matrix Operations
function gemm(A, B)
    m, k = size(A)
    k, n = size(B)
    C = zeros(m, n)
    
    for i in 1:m
        for j in 1:n
            for l in 1:k
                C[i, j] += A[i, l] * B[l, j]
            end
        end
    end
    
    return C
end

# Demonstrations

# Level-3: Matrix-Matrix multiplication
# Level-3: LinearAlgebra
Amatrix = randn(2000, 1000)
Bmatrix = randn(1000, 2000)
C = @benchmark $Amatrix * $Bmatrix
println(C)